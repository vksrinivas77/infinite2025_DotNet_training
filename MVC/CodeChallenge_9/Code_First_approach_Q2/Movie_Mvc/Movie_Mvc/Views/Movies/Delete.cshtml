@model Movie_Mvc.Models.Movie

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Movie</h2>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <strong>Name:</strong> @Model.Moviename <br />
    <strong>Director:</strong> @Model.DirectorName <br />
    <strong>Date of Release:</strong> @Model.DateofRelease.ToShortDateString() <br />
</div>

@using (Html.BeginForm("Delete", "Movies", new { id = Model.Mid }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit">Yes, Delete</button>
    @Html.ActionLink("Cancel", "Index")
}
